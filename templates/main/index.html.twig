            {% for service in services %}
                <!-- Modal Index Services -->
                <div class="modal fade" id="servicesDeleteBackdrop{{ service.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="BackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Validation de suppression</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="alert alert-danger text-dark" role="alert">
                                    Cette action est irréversible, lorsque tu cliquereras sur "<i>Valider la suppression</i>" ton service sera définitivement supprimé du site ! 
                            </div>
                            <div class="alert alert-info text-dark" role="alert">
                                    Pour supprimer le service, ré-écris son nom à l'identique ({{ service.name }}) dans la case ci-dessous:
                                    <input type="text" class="form-control" id="serviceverifdelete{{service.id}}" placeholder="{{ service.name }}">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#servicesIndexBackdrop">Retour</button>
                                <form method="post" action="{{ path('app_main_service_delete', {'id': service.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                                    <button type="submit" class="btn btn-danger" data-bs-dismiss="modal">Valider la suppression</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        // Récupérer l'email de l'utilisateur (passée depuis Twig)
                        const serviceName = "{{ service.name }}";
                        const serviceInput = document.getElementById('serviceverifdelete{{service.id}}');
                        const deleteButton = document.querySelector('#servicesDeleteBackdrop{{service.id}} .btn-danger');

                        // Désactiver le bouton "Valider la suppression" par défaut
                        deleteButton.setAttribute('disabled', 'true');

                        // Ajouter un écouteur d'événements pour détecter les changements dans le champ de saisie
                        serviceInput.addEventListener('input', function () {
                        if (serviceInput.value === serviceName) {
                            // Activer le bouton si l'email correspond
                            deleteButton.removeAttribute('disabled');
                        } else {
                            // Désactiver le bouton si l'email ne correspond pas
                            deleteButton.setAttribute('disabled', 'true');
                        }
                        });
                    });
                </script>
            {% endfor %}
