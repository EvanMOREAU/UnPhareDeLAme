                                                    <!-- Project details-->
                                                    <h2 class="text-uppercase">{{ service.name }}</h2>
                                                    <p class="item-intro text-muted">{{service.type.type}}</p>
                                                    <img class="img-fluid d-block mx-auto" src="uploads/images/{{service.img}}" alt="..." />
                                                    <p>{{ service.description }}</p>
                                                    <ul class="list-inline">
                                                        <li>
                                                            <strong>Praticien:</strong>
                                                            Céline GIRON
                                                        </li>
                                                        <li>
                                                            <strong>Prix:</strong>
                                                            {{ service.price }}€
                                                        </li>
                                                    </ul>
                                                    <button class="btn btn-outline-primary text-uppercase" data-bs-dismiss="modal" type="button">
                                                        <i class="fas fa-xmark me-1"></i>
                                                        Fermer
